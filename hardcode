from hub import light_matrix
from motor import velocity
import runloop
import motor_pair
from hub import port
import color_sensor
import distance_sensor
import color
import motor
import time
from hub import sound
import asyncio

motor_pair.pair(motor_pair.PAIR_1, port.C, port.D)

async def main():
    global score
    await asyncio.gather( 
        motor_pair.move_for_time(motor_pair.PAIR_1, 4845, 0, velocity=360),
        motor.run_for_time(port.E, 4845, velocity=360)
        )
    await light_matrix.write('1')
    await asyncio.gather(
        motor_pair.move_for_time(motor_pair.PAIR_1, 1418, 0, velocity=360),
        motor.run_for_time(port.E, 1418, velocity=360)
        )
    await motor_pair.move_for_degrees(motor_pair.PAIR_1, 90, 90, velocity = 200)
    await motor_pair.move_for_time(motor_pair.PAIR_1, 1384, 0, velocity=360)
    await light_matrix.write('2')
    await motor_pair.move_for_time(motor_pair.PAIR_1, 5536, 0, velocity=360)
    await light_matrix.write('3')
    await asyncio.gather(
        motor_pair.move_for_time(motor_pair.PAIR_1, 2560, 0, velocity=360),
        motor.run_for_time(port.E, 2560, velocity=360)
        )
    await motor_pair.move_for_time(motor_pair.PAIR_1, 6643, 0, velocity=360)
runloop.run(main())
